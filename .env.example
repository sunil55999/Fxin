# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/telegrampro
PGDATABASE=telegrampro
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password

# Telegram Bot Tokens
TELEGRAM_ADMIN_BOT_TOKEN=your_admin_bot_token_here
TELEGRAM_USER_BOT_TOKEN=your_user_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# NOWPayments Configuration
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret

# JWT Secret for Admin Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Application URLs
FRONTEND_URL=http://localhost:5000
BACKEND_URL=http://localhost:5000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Environment
NODE_ENV=development

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Security (Optional)
CORS_ORIGIN=http://localhost:5000
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (Optional)
MAX_FILE_SIZE=10485760

# Cache (Optional)
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Features Toggle (Optional)
ENABLE_REFERRALS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# Payment Webhooks
WEBHOOK_SECRET=your_webhook_secret_for_verification

# Telegram WebApp
TELEGRAM_BOT_URL=https://t.me/YourBotUsername
TELEGRAM_WEBAPP_URL=https://yourapp.com/miniapp

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
